DECLARE
    TOTAL_COST     NUMBER;
    NUM_OF_STUDENTS NUMBER;
    INCREASED_COST  NUMBER;
    COURSE_NAME     VARCHAR2(35);

BEGIN
    SELECT 
        DESCRIPTION
    INTO 
        COURSE_NAME
    FROM 
        COURSE
    WHERE
        COURSE_NO = :COURSE_NUM;

    SELECT
        COUNT(E.STUDENT_ID)
    INTO
        NUM_OF_STUDENTS
    FROM
        SECTION S
    JOIN 
        ENROLLMENT E ON E.SECTION_ID = S.SECTION_ID
    WHERE 
        COURSE_NO = :COURSE_NUM AND S.SECTION_ID = E.SECTION_ID;

    SELECT 
        SUM(COST)
    INTO 
        TOTAL_COST
    FROM
        COURSE
    WHERE 
        COURSE_NO = :COURSE_NUM;

    DBMS_OUTPUT.PUT_LINE(COURSE_NAME||' total revenue was $'|| (NUM_OF_STUDENTS * TOTAL_COST));
END;
